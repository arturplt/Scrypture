{
  "name": "scrypture",
  "version": "1.4.3",
  "description": "A mystical habit-tracking app with AI companion Bóbr",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:ci": "npm install --platform=linux --arch=x64 && tsc && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "deploy:force": "npm run version:bump && npm run build && npm run deploy:verify && gh-pages -d dist",
    "deploy:verify": "npm run build && npm run preview & sleep 5 && curl -s http://localhost:4173 > /dev/null && echo '✅ Build verified' || echo '❌ Build failed'",
    "version:bump": "node scripts/bump-version.js",
    "version:patch": "npm version patch && npm run version:bump",
    "version:minor": "npm version minor && npm run version:bump",
    "version:major": "npm version major && npm run version:bump",
    "cache:clear": "node scripts/clear-cache.js",
    "deploy:full": "npm run cache:clear && npm run version:bump && npm run build && npm run deploy:verify && gh-pages -d dist && echo '🚀 Deployment complete! Visit https://scrypture.app/force-deploy-refresh.html to clear cache'",
    "deploy:auto": "node scripts/deploy.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest --testPathPattern=\"performance\"",
    "test:performance:watch": "jest --testPathPattern=\"performance\" --watch",
    "test:performance:coverage": "jest --testPathPattern=\"performance\" --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:mobile": "playwright test --project=\"Mobile Chrome\"",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "validate": "npm run lint && npm run type-check && npm test",
    "dev:workflow": "npm run format && npm run validate"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.4.19"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "habit-tracking",
    "productivity",
    "react",
    "typescript",
    "ai-companion",
    "gamification"
  ],
  "author": "Scrypture Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arturplt/Scrypture.git"
  },
  "bugs": {
    "url": "https://github.com/arturplt/Scrypture/issues"
  },
  "homepage": "https://scrypture.app",
  "overrides": {
    "rollup": {
      "@rollup/rollup-linux-x64-gnu": "4.9.5"
    }
  }
}
